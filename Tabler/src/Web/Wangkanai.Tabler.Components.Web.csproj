<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="7.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Blazor\src\Core\Wangkanai.Blazor.csproj" />
    <ProjectReference Include="..\..\..\Blazor\src\Web\Wangkanai.Blazor.Components.Web.csproj" />
    <ProjectReference Include="..\Components\Wangkanai.Tabler.Components.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="wwwroot\dist\**" />
    <Content Include="wwwroot\dist\**" Watch="false" />

    <Content Remove="wwwroot\lib\**" />
    <Content Include="wwwroot\lib\**" Watch="false" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="package.json;package-lock.json" />
    <None Include="package.json;package-lock.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>
  
  <Target Name="NpmInstall" Inputs="package.json" Outputs="node_modules/.install-stamp">
    <Exec Command="npm ci" Condition="$(RestorePackagesWithLockFile) == 'true'" />
    <Exec Command="npm install" Condition="$(RestorePackagesWithLockFile) != 'true'" />
    <Touch Files="node_modules/.install-stamp" AlwaysCreate="true" />
  </Target>
  <Target Name="NpmRunBuild" DependsOnTargets="NpmInstall" BeforeTargets="BeforeBuild">
    <Exec Command="npm run --silent dev" Condition="$(Configuration) == 'DEBUG'" />
    <Exec Command="npm run --silent build" Condition="$(Configuration) != 'DEBUG'" />
  </Target>
  
</Project>
