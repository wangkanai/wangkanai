<Project Sdk="Microsoft.NET.Sdk.Web">

	<ItemGroup>
		<ProjectReference Include="..\Client\Wangkanai.Web.Client.csproj"/>
		<PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.Server"/>
	</ItemGroup>

	<ItemGroup>
		<Content Remove="wwwroot\lib\**"/>
		<Content Include="wwwroot\lib\**" Watch="false"/>
	</ItemGroup>

	<ItemGroup>
	  <_ContentIncludedByDefault Remove="Components\Pages\Blog\Index.razor" />
	</ItemGroup>

	<Target Name="NpmInstall" Inputs="package.json" Outputs="node_modules/.install-stamp">
		<Exec Command="npm ci" Condition="$(RestorePackagesWithLockFile) == 'true'"/>
		<Exec Command="npm install" Condition="$(RestorePackagesWithLockFile) != 'true'"/>
		<Touch Files="node_modules/.install-stamp" AlwaysCreate="true"/>
	</Target>
	<Target Name="NpmRunBuild" DependsOnTargets="NpmInstall" BeforeTargets="BeforeBuild">
		<Exec Command="npm run --silent lib" Condition="$(Configuration) != 'DEBUG'"/>
		<Exec Command="npm run --silent scss" Condition="$(Configuration) != 'DEBUG'"/>
	</Target>

</Project>
