<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <Nullable>enable</Nullable>
    <NoWarn>8603,8604,8618,8625</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="6.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Runtime\src\Wangkanai.Runtime.csproj" />
    <ProjectReference Include="..\..\Validation\src\Wangkanai.Validation.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <Content Remove="wwwroot\**" />
    <Content Include="wwwroot\**" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="package.json;package-lock.json" />
    <None Include="package.json;package-lock.json">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="NpmInstall" Inputs="package.json" Outputs="node_modules/.install-stamp">
    <Exec Command="npm ci" Condition="$(RestorePackagesWithLockFile) == 'true'" />
    <Exec Command="npm install" Condition="$(RestorePackagesWithLockFile) != 'true'" />
    <Touch Files="node_modules/.install-stamp" AlwaysCreate="true" />
  </Target>
  <Target Name="NpmRunBuild" DependsOnTargets="NpmInstall" BeforeTargets="BeforeBuild">
    <Exec Command="npm run dev" Condition="$(Configuration) == 'DEBUG'" />
    <Exec Command="npm run build" Condition="$(Configuration) != 'DEBUG'" />
  </Target>
  
</Project>
