<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <VersionPrefix>4.0.0</VersionPrefix>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Wangkanai Detection</Product>
    <Authors>Kapok Marketing, Inc., Sarin Na Wangkanai</Authors>
    <Copyright>Modifications © Kapok Marketing, Inc. Original Work ©2014-2020 Sarin Na Wangkanai, All rights reserved</Copyright>

    <Description>ASP.NET Core Detection service components for identifying details about client device, browser, engine, platform, and crawler. Responsive middleware for routing base upon request client device detection to specific view. Also in the added feature of user preference made this library even more comprehensive must for developers whom to target multiple devices with view rendered and optimized directly from the server side.</Description>

    <PackageTags>aspnetcore;detection</PackageTags>
    <PackageProjectUrl>https://github.com/kapokmarketing/Detection</PackageProjectUrl>
    <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
    <PackageIcon></PackageIcon>

    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>git://github.com/kapokmarketing/Detection</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Kapok.Detection</PackageId>
  </PropertyGroup>

  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Wangkanai.Runtime" Version="*" />
  </ItemGroup>

</Project>

